{
  "manifest_version": 3,
  "name": "WOTD",
  "version": "1.0.0",

  "author": "Luis A. Leiva",
  "description": "Learn a new word, one tab at a time.",

  "icons": {
    "128": "wotd.png"
  },

  "browser_action": {
    "default_icon": "wotd.png",
    "default_title": "WOTD - Word Of The Day"
  },

  "permissions": ["activeTab"],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "web_accessible_resources": [
    "entries.txt"
  ]
}
